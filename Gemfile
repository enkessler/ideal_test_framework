source 'https://rubygems.org'

gem 'require_all', '~>2.0' # For easy loading of entire directories
gem 'rake' # For executing common development tasks
gem 'rubocop' # For checking code quality of Ruby
gem 'rspec' # For testing
gem 'cucumber' # For testing
gem 'cuke_sniffer' # For checking code quality of Feature files and step defs
gem 'gherkin_lint' # For checking code quality of Gherkin
gem 'colorize' # For adding color and formatting to text output
gem 'childprocess' # For easily running and tracking child processes (e.g. in the Rake tasks)
gem 'cuke_cataloger', '~> 1.5' # For adding test case ids to feature files
